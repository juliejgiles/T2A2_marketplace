<%content_for :body_class %>

<div class="tile is-ancestor">
<div class="tile is-parent is-8">
      <article class="tile is-child title-tile">
        <p class="title"><%= @sticker.title %> </p>
        <p class="subtitle">Designed by <%= @sticker.user.name %></p>
        <div class="content">
            <div class="image-holder">
              <div class="feature-image show-image-bg">
                <% if @sticker.image? %>
                  <%= image_tag(@sticker.image_url(:default).to_s) %>
                <% else  %>
                  <h1 class="preview"> No Preview Available </h1>
                <% end %>
              </div>
            </div>
        </div>
      </article>
</div>

<%# Vertical column on right hand side of page containing cart/buying options  %>
<div class="tile is-parent is-4">
    <article class="tile is-child notification is-light">
      <div class="content">
        <p class="title">Tall tile</p>
        <p class="subtitle">With even more content</p>
          <div class="content">
            <!-- Content -->
          </div>
      </div>
    </article>
  </div>
</div>

<div class="columns">

  <div class="column is-8">
      <h4 class="title price"><%= number_to_currency(@sticker.price) %></h4>
    <div class="sticker-text">
      <p class="content">
          Finish: 
        <% if @sticker.finish? %>
          <%= @sticker.finish %>
        <% end %>
      </p>
      <p class="content">
        Material:
        <% if @sticker.material? %>
          <%= @sticker.material %>
        <% end %>
      </p>
    </div>
    


    
        <div class="show-content">
              <h3 class="subtitle description is-4">Description</h3>
              <%= @sticker.description %>

            <div class="other-views">
                <h3 class="subtitle recommendations is-4 ">Items recommended for you:</h3>
                <table class="table is-narrow">
                  <tr>
                    <td class="has-text-weight-bold">TEST-TITLE</td>
                    <td><%= @sticker %></td>
                  </tr>
            </div>
        </div>
      
 
  </div>

  <%# Box of items recommended for the user  %>
     <div class="column is-3 is-offset-1">
      
                  <div class="bg-white pa4 border-radius-3">
                    <h4 class="is-5 has-text-centered price"><%= number_to_currency(@sticker.price) %></h4>
                    <p class="has-text-centered mb4">Designed by <%= @sticker.user.name %></p>
                    <%#= button_to 'Add to cart', line_items_path(sticker_id: @sticker), class: 'button is-warning add-to-cart' %>
                  </div>
      </div>
   
</div>

