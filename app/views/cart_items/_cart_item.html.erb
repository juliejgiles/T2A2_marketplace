<div class="columns align-items-center">
  <div class="column is-1">
    <%= cart_item.quantity %>
  </div>
  <div class="column is-2">
    <figure class="is-128x128 image">
        <% if cart_item.sticker.image? %>
                  <%= image_tag(cart_item.sticker.image_url(:thumb)) %>
                <% else  %>
                  <h1 class="preview"> No Preview Available </h1>
                  <span class="icon no-preview-icon is-large fas fa-4x">
                        <i class="far fa-meh-blank"></i>    
                  </span>
                <% end %>
    </figure>
  </div>
  <div class="column is-9">
    <strong><%= cart_item.sticker.title %></strong>
    <div class="columns align-items-center">
      <div class="content column is-9">
        <%= truncate(cart_item.sticker.description, length: 1000) %>
      </div>
      <div class="column is-3 has-text-right">
        <strong class="f4"><%= number_to_currency(cart_item.total_price) %></strong>
      </div>
    </div>
  </div>
</div>

<div class="has-text-right">
  <%= link_to 'Remove Sticker', cart_item, method: :delete, data: { confirm: "Are you sure? " }, class: "button is-small" %>
</div>


